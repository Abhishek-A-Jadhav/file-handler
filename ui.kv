#: import WipeTransition kivy.uix.screenmanager.WipeTransition

ScreenManagement:
    transition: WipeTransition(duration = 0.3)
    Window1:
    Window2:
    Window3:
    Window4:
    Window5:
    Window6:
    Window7:
    Window8:
    Window9:
    Window10:
    Window11:

<Window1>
    name: "start"
    Image:
        source: "folder1.png"
        size_hint_x: 0.25
        pos: root.width * 0.38, root.height * 0.0

    Button:
        pos : (root.width / 2) - (root.width * 0.1 / 2), root.height * 0.05
        size_hint: 0.1, 0.05
        text: "Enter"
        font_size: root.height * 0.03
        on_press: app.root.current = "home"


<Window2>
    name: "home"

    canvas:
        Rectangle:
            size: root.width * 0.00125, root.height * 0.03
            pos: root.width * 0.01, root.height * 0.175

    Image:
        source: "home_info.png"
        size_hint_x: 0.55
        pos: root.width * 0.3, -root.height * 0.0

    Button:
        pos : root.width * 0.02, root.height * 0.9
        size_hint: 0.1, 0.075
        text: "Copy"
        font_size: root.height * 0.03
        on_press: app.root.current = "copy_info"

    Button:
        pos : root.width * 0.02, root.height * 0.795
        size_hint: 0.1, 0.075
        text: "Move"
        font_size: root.height * 0.03
        on_press: app.root.current = "move_info"

    Button:
        pos : root.width * 0.02, root.height * 0.69
        size_hint: 0.1, 0.075
        text: "Rename"
        font_size: root.height * 0.03
        on_press: app.root.current = "rename_info"

    Button:
        pos : root.width * 0.02, root.height * 0.585
        size_hint: 0.1, 0.075
        text: "Delete"
        font_size: root.height * 0.03
        on_press: app.root.current = "delete_info"

    Button:
        pos : root.width * 0.02, root.height * 0.48
        size_hint: 0.1, 0.075
        text: "Auto-Sort"
        font_size: root.height * 0.03
        on_press: app.root.current = "autoSort"

    Button:
        pos : root.width * 0.02, root.height * .155
        size_hint: 0.1, 0.075
        text: "Home"
        font_size: root.height * 0.03
        on_press: app.root.current = "home"

    Button:
        pos : root.width * 0.02, root.height * 0.05
        size_hint: 0.1, 0.075
        text: "Help"
        font_size: root.height * 0.03
        on_press: app.root.current = "start"


